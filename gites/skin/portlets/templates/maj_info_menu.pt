<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="plone">
<body>
<div metal:define-macro="portlet">
    <div id="portlet-maj-info-menu"
         tal:define="portal_url context/@@plone_portal_state/portal_url">

        <dl class="portlet">
            <dt class="portletHeader">
                <!--tal:content="view/title"-->
                Mise à jour des infos
            </dt>
            <dd class="portletItemSingle">
                * Mes données *
                <div id="maj-info-menu">
                    <a href="#"
                       class="tile"
                       tal:attributes="href string:${portal_url}/zone-membre/proprio-info">
                       <b>Mes données personnelles</b>
                    </a>
                </div>
            </dd>
            <dd class="portletItemSingle">
                * Hébergement *
                <div id="maj-info-menu"
                     tal:repeat="gite view/getGitesForProprio">
                    <a href="#"
                       class="tile"
                       tal:attributes="href string:${portal_url}/zone-membre/hebergement-info?hebPk=${gite/token};
                                       title gite/title">
                       <b tal:replace="gite/title">heb du proprio</b>
                    </a>
                </div>
            </dd>
            <dd class="portletFooter">
                &nbsp;
            </dd>
        </dl>
    </div>
</div>
</body>
</html>

