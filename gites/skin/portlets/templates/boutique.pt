<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="gites">
<body>
<div metal:define-macro="portlet"
  tal:define="obj view/getRandomBoutiqueItem;
              boutique_link view/getAllBoutiqueItemsView;
              "
     tal:condition="python:obj is not None">

   <div id="portlet-boutique">
      <dl class="portlet">
         <dt class="portletHeader"
             i18n:translate="la_boutique_portlet_title">
           La boutique
         </dt>

         <dd class="portletItemSingle">
                    <a href="#"
           class="tile"
           tal:attributes="href obj/absolute_url;
                           title obj/Description">
            <span tal:replace="obj/pretty_title_or_id">
             Some Sejour
            </span>
            <span class="portletItemDetails"
                  tal:define="vignette obj/getMiniPhoto">
                    <img src=""
                         tal:condition="vignette" tal:replace="structure vignette"/><br />
            </span>
            </a>

         </dd>

    <dd class="portletFooter">
        <a href=""
           class="tile"
           tal:attributes="href boutique_link">
           <span i18n:translate="all_sejour_fute">Tous</span>
           <img src="flechebulle_bleue.png" border="0" />
        </a>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>
      </dl>
   </div>
</div>
</body>
</html>
