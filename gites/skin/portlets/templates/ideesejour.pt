<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      i18n:domain="gites">
<body>
<div metal:define-macro="portlet"
  tal:define="obj view/getRandomIdeeSejour;
              sejours_link view/getAllIdeesSejoursView;"
  tal:condition="obj">
   <div id="portlet-idee-sejour">
      <dl class="portlet">

         <span class="masquer-titre"><!-- masquer titre lorsque affichage dans bnb-->
             <dt class="portletHeader"
                 i18n:translate="idees_sejours">
               Idées Séjour
             </dt>
         </span>
         <div id="bnb-portlet-title"><!-- masquer titre lorsque affichage dans gdw-->
             <img src=""
                  tal:condition="view/inBnB"
                  tal:attributes="src python:'titre_idees_sejours_%s.png' % request.LANGUAGE"
                  alt="BnB Idées séjour"
                  title="BnB Idées séjour" />
         </div>
         <dd class="portletItemSingle">
           <a href="#"
              class="tile"
              tal:attributes="href obj/getURL;
                              title obj/Description">
            <span tal:replace="obj/pretty_title_or_id">
             Some Sejour
            </span>
            <span class="portletItemDetails"
                  tal:define="vignettes python:view.getRandomVignette(obj.getPath())">
                  <tal:vign tal:repeat="vignette vignettes">
                    <img class="bnb-porlet-image"
                         src=""
                         tal:attributes="src string:${vignette/getURL}/image_thumb"/><br />
                  </tal:vign>
            </span>
            </a>
         </dd>
    <dd class="portletFooter">
        <a href=""
           tal:attributes="href sejours_link">
           <span i18n:translate="all_sejour_fute">Tous</span></a>
           <img src="fleche_grise.png" border="0" />
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

      </dl>
   </div>
<div class="bnbportletFooter">
        <a href=""
           tal:attributes="href sejours_link">
           <span i18n:translate="all_sejour_fute">Tous</span></a>
           <img src="fleche_grise.png" border="0" />
</div>
</div>
</body>
</html>


