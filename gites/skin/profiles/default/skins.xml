<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="GitesSkin">

 <object name="gites_images"
         meta_type="Filesystem Directory View"
         directory="gites.skin:skins/gites_images"/>
 <object name="gites_templates"
         meta_type="Filesystem Directory View"
         directory="gites.skin:skins/gites_templates"/>
 <object name="gites_styles"
         meta_type="Filesystem Directory View"
         directory="gites.skin:skins/gites_styles"/>

 <skin-path name="GitesSkin" 
            based-on="Plone Default">
  <layer name="gites_images"
         insert-after="custom"/>
  <layer name="gites_templates"
         insert-after="gites_images"/>
  <layer name="gites_styles"
         insert-after="gites_templates"/>
 </skin-path>

</object>
