<?xml version="1.0"?>
<object name="portal_skins" allow_any="False" cookie_persistence="False"
   default_skin="Gites Skin">

 <object name="gites_skin_custom_images"
    meta_type="Filesystem Directory View"
    directory="gites.skin:skins/gites_skin_custom_images"/>
 <object name="gites_skin_custom_templates"
    meta_type="Filesystem Directory View"
    directory="gites.skin:skins/gites_skin_custom_templates"/>
 <object name="gites_skin_styles"
    meta_type="Filesystem Directory View"
    directory="gites.skin:skins/gites_skin_styles"/>

 <skin-path name="Gites Skin" based-on="Plone Default">
  <layer name="gites_skin_custom_images"
     insert-after="custom"/>
  <layer name="gites_skin_custom_templates"
     insert-after="gites_skin_custom_images"/>
  <layer name="gites_skin_styles"
     insert-after="gites_skin_custom_templates"/>
 </skin-path>

</object>
