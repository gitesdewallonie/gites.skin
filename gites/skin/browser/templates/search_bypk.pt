<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<head>
</head>

<body>
<div metal:fill-slot="main">

<div id="viewspace">
  <h1  i18n:translate=""
      tal:content="view/label"
         >Do something</h1>

  <div class="form-configuration-table"
       tal:content="structure view/renderTable"
       />

<form action="." metal:define-macro="master"
      tal:attributes="action request/URL" method="post"
      class="edit-form" enctype="multipart/form-data"
      id="zc.page.browser_form">


  <table class="form-fields">
    <tr class="row" tal:replace="nothing">
        <td class="label">Extra top</td>
        <td class="label"><input type="text" /></td>
    </tr>
    <tbody>
      <tr tal:repeat="widget view/widgets">
        <td tal:define="hint widget/hint"
          metal:define-macro="labelcell">
          <label tal:condition="python:hint"
                 tal:attributes="for widget/name"
                 >
            <span i18n:translate=""
                           tal:content="widget/label">label</span>
          </label>
          <span class="fieldRequired"
                tal:condition="widget/required"
                title="Required"
                i18n:translate="label_required"
                i18n:attributes="title title_required;">
            (Required)
          </span>
          <label tal:condition="python:not hint"
                 tal:attributes="for widget/name">
            <span class="required" tal:condition="widget/required"
            >*</span><span i18n:translate=""
                           tal:content="widget/label">label</span>
          </label><br/>
          <div class="formHelp"
               i18n:translate=""
               tal:content="hint"
               tal:condition="hint"
               tal:attributes="id string:field-help-for-${widget/name}"
               >Title of this content object.</div>
        </td>
        <td class="field"
            metal:define-macro="widgetcell">
          <div class="widget" tal:content="structure widget">
          <input type="text" /></div>
          <div class="error"
               tal:condition="widget/error"
               >
            <span tal:replace="structure widget/error">error</span>
          </div>
        </td>
      </tr>
    </tbody>
    <tr class="row" tal:replace="nothing">
      <td class="label">Extra bottom</td>
      <td class="label"><input type="text" /></td>
    </tr>
  </table>
  <div id="actionsView">
    <span class="actionButtons"
          tal:condition="view/availableActions"
          metal:define-slot="bottom_buttons">
      <tal:action tal:repeat="action view/actions">
        <input tal:replace="structure action/render"
               tal:condition="python:'table' not in action.label"
               />
      </tal:action>
    </span>

</form>


</div>
</div>
</body>
</html>
