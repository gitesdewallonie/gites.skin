<tal:language
    tal:define="available view/available;
                languages view/languages;
                showFlags view/showFlags;">

    <ul id="portal-languageselector"
        tal:condition="python:available and len(languages)>=2">
        <li tal:condition="not: showFlags">
            <span tal:repeat="lang languages"
                  class="code-langue">
                <a href=""
                   tal:condition="python: lang['code'] != request.get('LANGUAGE')"
                   tal:attributes="href lang/url;
                                   title lang/name">
                   <span tal:content="lang/code" />
                </a>
            </span>
        </li>
    </ul>

</tal:language>
